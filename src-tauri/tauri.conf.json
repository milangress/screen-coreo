{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "screen-coreo",
    "version": "0.1.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true,
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPCACHE/**",
          "$RESOURCE/**",
          "$APPDATA/assets/*",
          "../static/*",
          "**"
        ]
      },
      "shell": {
        "all": true,
        "open": true
      },
      "window": {
        "all": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$RESOURCE/*"
        ]
      },
      "globalShortcut": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Presentation Controller",
        "height": 300,
        "x": 0,
        "y": 0,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: https://asset.localhost http://localhost:1420; img-src 'self' asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost http://localhost:1420",
      "dangerousDisableAssetCspModification": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.milan.screen-coreo.app",
      "resources": [
        "../static/*"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
